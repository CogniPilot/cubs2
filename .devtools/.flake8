[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    build,
    install,
    log,
    .eggs,
    *.egg-info,
    .tox,
    .venv
extend-ignore = 
    E203,  # whitespace before ':' (conflicts with black)
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator (conflicts with black)
    Q000,  # quote style (too strict, allow both single and double quotes)
per-file-ignores = 
    __init__.py:F401
